.row
  .col.s6.offset-s3.center
    = form_for @user, url: user_path do |f|
      .row
        .input-field.col.s12
          = f.text_field :email, class: 'validate'
          = f.label :email
        .input-field.col.s12
          = f.password_field :password, class: 'validate'
          = f.label :password
        .input-field.col.s12
          = f.password_field :password_confirmation, class: 'validate'
          = f.label :password_confirmation
      %button{class: 'btn-large waves-effect waves-light', name: 'commit'}
        UPDATE
